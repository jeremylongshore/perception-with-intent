# Perception - Environment Variables Template
# Copy to .env and fill in your values

# Google Cloud Configuration
VERTEX_PROJECT_ID=perception-with-intent
VERTEX_LOCATION=us-central1
FIRESTORE_DATABASE=(default)

# Firebase Configuration
FIREBASE_PROJECT=perception-with-intent

# Agent Configuration
AGENT_ENVIRONMENT=local  # local, staging, production

# MCP Service URLs (Cloud Run)
NEWS_INGESTION_MCP_URL=https://news-ingestion-mcp-[hash]-uc.a.run.app
TOPICS_MCP_URL=https://topics-mcp-[hash]-uc.a.run.app
RELEVANCE_MCP_URL=https://relevance-mcp-[hash]-uc.a.run.app
LLM_TOOLS_MCP_URL=https://llm-tools-mcp-[hash]-uc.a.run.app
STORAGE_MCP_URL=https://storage-mcp-[hash]-uc.a.run.app
VALIDATION_MCP_URL=https://validation-mcp-[hash]-uc.a.run.app
DELIVERY_MCP_URL=https://delivery-mcp-[hash]-uc.a.run.app

# Logging
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
ENABLE_CLOUD_LOGGING=true
ENABLE_CLOUD_TRACE=true

# Development (local only - comment out for production)
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account-key.json
